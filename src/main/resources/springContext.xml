<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="dao" class="ru.ngs.summerjob.register.dao.MarriageDao">
        <property name="test" value="SIMPLE_NEW"/>
    </bean>

    <bean id="manager" class="ru.ngs.summerjob.register.buisness.MarriageManager">
        <property name="marriageDao" ref="dao"/>
    </bean>

    <bean id="controller" class="ru.ngs.summerjob.register.rest.MarriageController">
        <property name="marriageManager" ref="manager"/>
    </bean>

</beans>
